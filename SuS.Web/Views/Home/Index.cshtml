@{ 
    ViewBag.Title = "Home";
}
<div id="show-loading">
    <span id="loading-icon"><i class="fa fa-spinner fa-spin fa-3x"></i></span>
</div>

    <form id="home-form">
        <div class="form-horizontal">
            <div class="input-group">
                <label for="home-name" class="col-md-3 control-label">Home: </label>
                <div class="col-md-9">
                    <input type="text" id="homeName" name="homeName" class="form-control" />
                </div>

            </div>
            <div class="input-group">
                <div class="col-md-2 col-md-offset-3">
                    <input type="submit" class="btn btn-default" value="Ok" />
                </div>
            </div>
        </div>
    </form>
    <div id="results-display"></div>


@section scripts {
<script>

    $('form').on('submit', function (e) {
        e.preventDefault();
        $("#show-loading").css("display", "block");
        $.ajax({
            method: "POST",
            url: "Home/Index",
            data: $("#home-form").serialize(),
            success: function (response) {
                $("#show-loading").css("display", "none");
                $("#results-display").html(response);
            },
        })
    });
</script>
}